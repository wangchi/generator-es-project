{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "eqeqeq": ["warn"],
    "no-const-assign": ["error"],
    "no-empty": ["error"],
    "no-use-before-define": ["error"],
    "no-console": ["off"]
  },
  "env": {
    "node": true,
    "browser": true
  }
}
